<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey90"
    android:orientation="vertical"
    tools:context="com.example.network88.MainActivity">


    <Button
        android:id="@+id/run"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="325dp"
        android:layout_height="75dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8px"
        android:paddingRight="8px"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@android:color/black"
        android:onClick="runTest"
        android:shadowColor="#FFFFFF"
        android:text="@string/run_test"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/teal_200"
        android:textColorHighlight="@color/teal_700"
        android:textColorHint="@color/black"
        android:textSize="22sp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/black"
        app:strokeColor="@color/black" />


    <ImageView
        android:id="@+id/networkimage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="424dp"
        android:scaleX="1.0"
        android:scaleY="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/networkimage"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/ip"
        android:layout_width="360dp"
        android:layout_height="42dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/roundedbutton"
        android:checked="true"
        android:minHeight="48dp"
        android:paddingLeft="14dp"
        android:paddingRight="80dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="IP Address:"
        android:textColor="@color/teal_200"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mask"
        style="@style/size"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/roundedbutton"
        android:paddingLeft="14dp"
        android:paddingRight="80dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Subnet mask:"
        android:textColor="@color/teal_200"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ping"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="268dp"
        android:background="@drawable/roundedbutton"
        android:minHeight="48dp"
        android:paddingLeft="14dp"
        android:paddingRight="80dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="PING:"
        android:textColor="@color/teal_200"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_Download"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="176dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/circlebutton"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:text="Download:"
        android:textColor="@color/teal_200"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/run"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ping"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_Upload"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="176dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/circlebutton"
        android:paddingLeft="26dp"
        android:paddingTop="16dp"
        android:text="Upload:"
        android:textColor="@color/teal_200"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/run"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ping"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="networkimage" />
        
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>